@model Proyecto1_MZ_MJ.Models.Evento

@{
    ViewData["Title"] = "Eliminar Evento";
}

<div class="container mt-4">
    <h2 class="text-danger">Eliminar Evento</h2>
    <hr />

    <div class="alert alert-warning">
        <h4>¿Está seguro de que desea eliminar este evento?</h4>
    </div>

    <div class="row">
        <div class="col-md-4 mb-3">
            @if (!string.IsNullOrEmpty(Model.ImagenEvento))
            {
                <img src="@Model.ImagenEvento" alt="@Model.Titulo" class="img-fluid rounded shadow" />
            }
        </div>

        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-4">Título:</dt>
                <dd class="col-sm-8">@Model.Titulo</dd>

                <dt class="col-sm-4">Descripción:</dt>
                <dd class="col-sm-8">@Model.Descripcion</dd>

                <dt class="col-sm-4">Fecha y Hora:</dt>
                <dd class="col-sm-8">@Model.FechaEvento.ToString("dd/MM/yyyy HH:mm")</dd>

                <dt class="col-sm-4">Ubicación:</dt>
                <dd class="col-sm-8">@Model.Ubicacion</dd>

                @if (!string.IsNullOrEmpty(Model.Organizador))
                {
                    <dt class="col-sm-4">Organizador:</dt>
                    <dd class="col-sm-8">@Model.Organizador</dd>
                }

                @if (!string.IsNullOrEmpty(Model.TipoEvento))
                {
                    <dt class="col-sm-4">Tipo de Evento:</dt>
                    <dd class="col-sm-8">@Model.TipoEvento</dd>
                }

                @if (Model.CapacidadMaxima.HasValue)
                {
                    <dt class="col-sm-4">Capacidad:</dt>
                    <dd class="col-sm-8">@Model.CapacidadMaxima</dd>
                }
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="EventoId" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Eliminar
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Cancelar
        </a>
    </form>
</div>