@model Proyecto1_MZ_MJ.Models.Evento

@{
    ViewData["Title"] = "Detalles del Evento";
}

<div class="container mt-4">
    <h2>Detalles del Evento</h2>
    <hr />

    <div class="row">
        <div class="col-md-4 mb-3">
            @if (!string.IsNullOrEmpty(Model.ImagenEvento))
            {
                <img src="@Model.ImagenEvento" alt="@Model.Titulo" class="img-fluid rounded shadow" />
            }
            else
            {
                <div class="bg-secondary d-flex align-items-center justify-content-center rounded" style="height: 300px;">
                    <i class="bi bi-calendar-event display-1 text-white"></i>
                </div>
            }
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">@Model.Titulo</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Descripción:</dt>
                        <dd class="col-sm-8">@Model.Descripcion</dd>

                        <dt class="col-sm-4">Fecha y Hora:</dt>
                        <dd class="col-sm-8">
                            <strong>@Model.FechaEvento.ToString("dddd, dd MMMM yyyy HH:mm")</strong>
                        </dd>

                        <dt class="col-sm-4">Ubicación:</dt>
                        <dd class="col-sm-8">
                            <i class="bi bi-geo-alt"></i> @Model.Ubicacion
                        </dd>

                        @if (!string.IsNullOrEmpty(Model.Organizador))
                        {
                            <dt class="col-sm-4">Organizador:</dt>
                            <dd class="col-sm-8">@Model.Organizador</dd>
                        }

                        @if (!string.IsNullOrEmpty(Model.TipoEvento))
                        {
                            <dt class="col-sm-4">Tipo de Evento:</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-info">@Model.TipoEvento</span>
                            </dd>
                        }

                        @if (Model.CapacidadMaxima.HasValue)
                        {
                            <dt class="col-sm-4">Capacidad Máxima:</dt>
                            <dd class="col-sm-8">
                                <i class="bi bi-people"></i> @Model.CapacidadMaxima personas
                            </dd>
                        }

@*                         <dt class="col-sm-4">Estado:</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.Activo ? "bg-success" : "bg-secondary")">
                                @(Model.Activo ? "Activo" : "Inactivo")
                            </span>
                        </dd> *@

                        <dt class="col-sm-4">Requiere Confirmación:</dt>
                        <dd class="col-sm-8">
                            @(Model.RequiereConfirmacion ? "Sí" : "No")
                        </dd>

                        @if (!string.IsNullOrEmpty(Model.NotasAdicionales))
                        {
                            <dt class="col-sm-4">Notas Adicionales:</dt>
                            <dd class="col-sm-8">@Model.NotasAdicionales</dd>
                        }
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.EventoId" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver a la Lista
        </a>
    </div>
</div>