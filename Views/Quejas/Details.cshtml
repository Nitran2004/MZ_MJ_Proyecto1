@model Proyecto1_MZ_MJ.Models.Queja
@{
    ViewData["Title"] = "Detalles de la Queja";
}

<div class="container mt-4">
    <h2>Detalles de la Queja</h2>
    <hr />

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    @if (!string.IsNullOrEmpty(Model.Foto))
                    {
                        <img src="@Model.Foto" alt="Foto" class="img-fluid rounded" />
                    }
                    else
                    {
                        <div class="alert alert-secondary text-center">
                            Sin foto disponible
                        </div>
                    }
                </div>
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-3">Nombre:</dt>
                        <dd class="col-sm-9">@Model.Nombre</dd>

                        <dt class="col-sm-3">Queja:</dt>
                        <dd class="col-sm-9">@Model.QuejaTexto</dd>

                        <dt class="col-sm-3">Sector:</dt>
                        <dd class="col-sm-9">@Model.Sector</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.QuejaId" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver a la lista
        </a>
    </div>
</div>