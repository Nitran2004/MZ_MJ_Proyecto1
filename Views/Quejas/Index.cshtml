@model IEnumerable<Proyecto1_MZ_MJ.Models.Queja>

@{
    ViewData["Title"] = "Lista de Quejas";
}

<style>
    .btn {
        font-size: 1.1em;
        padding: 10px 18px;
        border-radius: 10px;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
    }

        .btn i {
            font-size: 1.3em;
        }

    .btn-info {
        background-color: #17a2b8;
        border: none;
        color: white;
    }

    .btn-warning {
        background-color: #ffc107;
        border: none;
        color: black;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        color: white;
    }

    .btn-info:hover {
        background-color: #138496;
    }

    .btn-warning:hover {
        background-color: #e0a800;
    }

    .btn-danger:hover {
        background-color: #c82333;
    }

    th, td {
        font-size: 1.2em;
    }

    h2 {
        font-size: 2em;
        font-weight: bold;
    }
</style>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Lista de Quejas</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nueva Queja
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark text-center">
                <tr>
                    <th>Foto</th>
                    <th>Nombre</th>
                    <th>Queja</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody class="align-middle text-center">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Foto))
                            {
                                <img src="@item.Foto" alt="Foto" style="width: 70px; height: 70px; object-fit: cover; border-radius: 8px;" />
                            }
                            else
                            {
                                <span class="text-muted">Sin foto</span>
                            }
                        </td>
                        <td>@item.Nombre</td>
                        <td>@item.QuejaTexto</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.QuejaId" class="btn btn-info me-2">
                                <i class="bi bi-eye"></i> Detalle
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.QuejaId" class="btn btn-warning me-2">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.QuejaId" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Borrar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
