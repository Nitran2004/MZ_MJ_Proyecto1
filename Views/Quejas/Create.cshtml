@model Proyecto1_MZ_MJ.Models.Queja
@{
    ViewData["Title"] = "Crear Queja";
}

<div class="container mt-4">
    <h2>Crear Nueva Queja</h2>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label"></label>
                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese su nombre" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="QuejaTexto" class="form-label"></label>
                    <textarea asp-for="QuejaTexto" class="form-control" rows="5" placeholder="Describa su queja"></textarea>
                    <span asp-validation-for="QuejaTexto" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Sector" class="control-label"></label>
                    <input asp-for="Sector" class="form-control" />
                    <span asp-validation-for="Sector" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="foto" class="form-label">Foto (Opcional)</label>
                    <input type="file" class="form-control" id="foto" name="foto" accept="image/*" />
                    <small class="text-muted">Formatos permitidos: JPG, PNG, GIF</small>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Guardar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}